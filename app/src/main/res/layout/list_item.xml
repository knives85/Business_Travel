<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:padding="5dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/day_number_textview"
                android:layout_width="wrap_content"  style="@style/day_list"
                android:layout_height="wrap_content" android:text="25"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                >
                <TextView
                    android:id="@+id/expense_desc_textview"
                    android:layout_width="wrap_content" style="@style/expense_list"
                    android:layout_height="wrap_content" android:layout_alignParentStart="true" android:text="Expenses"/>
                <TextView
                    android:id="@+id/expense_value_textview"
                    android:layout_width="wrap_content" style="@style/expense_list"
                    android:layout_height="wrap_content" android:layout_alignParentEnd="true" android:text="20,00"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                >
                <TextView
                    android:id="@+id/income_desc_textview"
                    android:layout_width="wrap_content" style="@style/income_list"
                    android:layout_height="wrap_content" android:layout_alignParentStart="true" android:text="Incomes"/>
                <TextView
                    android:id="@+id/income_value_textview"
                    android:layout_width="wrap_content" style="@style/income_list"
                    android:layout_height="wrap_content" android:layout_alignParentEnd="true" android:text="30,00"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:id="@+id/balance_desc_textview"
                    android:layout_width="wrap_content"  style="@style/balance_list"
                    android:layout_height="wrap_content" android:layout_alignParentStart="true" android:text="Day Balance"/>
                <TextView
                    android:id="@+id/balance_value_textview"
                    android:layout_width="wrap_content"  style="@style/balance_list"
                    android:layout_height="wrap_content" android:layout_alignParentEnd="true" android:text="10,00"/>
            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>
